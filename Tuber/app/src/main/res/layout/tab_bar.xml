<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/tabBar"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">

        <LinearLayout
            android:padding="0dp"
            android:id="@+id/tab_1"

            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/image_1"
                android:layout_marginTop="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/today"
                />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tab_1_text"
                android:padding="0dp"
                android:gravity="center"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:textColor="@color/tabBarText"
                android:text="@string/first_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_2"

            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/image_2"

                android:layout_marginTop="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/app"
                />
            <TextView
                android:layout_gravity="center"
                android:id="@+id/tab_2_text"
                android:textStyle="bold"
                android:textSize="10sp"

                android:textColor="@color/tabBarText"
                android:gravity="center"

                android:text="@string/second_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_3"
            android:gravity="center"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/image_3"

                android:layout_marginTop="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/history"
                />

            <TextView
                android:textColor="@color/tabBarText"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tab_3_text"
                android:textStyle="bold"
                android:textSize="10sp"
                android:text="@string/third_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_4"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/image_4"

                android:layout_marginTop="3dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/message"
                />
            <TextView

                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/tabBarText"
                android:layout_gravity="center"
                android:id="@+id/tab_4_text"
                android:gravity="center"
                android:text="@string/fourth_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>
